<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Sharp background image (to fade out) -->
    <ImageView
        android:id="@+id/sharpImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/posh"
        android:scaleType="centerCrop" />

    <!-- Blurred background image (initially invisible) -->
    <ImageView
        android:id="@+id/blurredImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/posh"
        android:alpha="0"
        android:scaleType="centerCrop" />

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/btnAddFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify Food"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSeeCurrentOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Current Orders"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnTransactionHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnCustomerDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chef's"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnWaiterDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiter Details"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnTakeOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Order"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</FrameLayout>
